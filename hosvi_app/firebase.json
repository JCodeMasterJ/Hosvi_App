
{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "apk/**",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache" },
          { "key": "Content-Type", "value": "application/vnd.android.package-archive" },
          { "key": "Content-Disposition", "value": "attachment; filename=\"HOSVI-App.apk\"" }
        ]
      }
    ]
  }
}

